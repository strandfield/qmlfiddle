extends layout

block content
  h1 All fiddles
  table 
    tbody 
      tr 
        th ID 
        th Title
        if user && user.superUser 
          th Author
      each fiddle in fiddles 
        tr 
          td
            a(href=fiddle.id.toString(16))= fiddle.id.toString(16)
          td 
            if fiddle.title != ""
              span= fiddle.title
            else 
              span Untitled fiddle
          if user && user.superUser 
            td 
              if fiddle.author 
                a(href=`/u/${fiddle.author.username}`)= fiddle.author.username
              else 
                span unknown
  p Total: #{fiddles.length} fiddles.

