extends layout

block content
    section(class="prompt")
        h1 Sign in
        form(action="/login/password", method="post")
            section(class="mb-3") 
                label(for="username", class="form-label") Username or Email 
                input(id="username", class="form-control", name="username", type="text", autocomplete="username", required)
            section(class="mb-3") 
                label(for="current-password", class="form-label") Password 
                input(id="current-password", class="form-control", name="password", type="password", autocomplete="current-password", required)
            button(type="submit", class="btn btn-primary") Sign in
        hr
        p(class="help").
            Don't have an account? #[a(href="/signup") Sign up]
