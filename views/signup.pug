extends layout

block content
    section(class="prompt")
        h1 Sign up
        if query.status == "failure"
            p Could not create account. Username or email may already be in use or invalid.
        if !signupEnabled
            p Sign up is temporarily disabled. 
        else
            form(action="/signup", method="post")
                section(class="mb-3")
                    label(for="username", class="form-label") Username 
                    input(id="username", class="form-control", name="username", type="text", required)
                section(class="mb-3")
                    label(for="email", class="form-label") Email 
                    input(id="email", class="form-control", name="email", type="text", placeholder="Enter email", required)
                section(class="mb-3")
                    label(for="new-password", class="form-label") Password 
                    input(id="new-password", class="form-control", name="password", type="password", required)
                button(type="submit", class="btn btn-primary") Sign up
        hr
        p(class="help").
            Already have an account? #[a(href="/login") Sign in]
